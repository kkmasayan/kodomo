<%#app/assets/stylesheets/diaries/new.css %>

<div class="diaries-contents">
  <header class="diaries-header">
    <%= link_to image_tag('kodomo-logo.png' , size: '185x50'), "/" %>

  </header>
  <div class="diaries-main">
    <h2 class="diaries-title">日記投稿内容を入力</h2>
    <%= form_with model: @diary,local: true do |f| %>

    
    <%= render 'shared/error_messages', model: f.object %>
    

    <%# 日記画像 %>
    <div class="img-upload">
      <div class="weight-bold-text">
        日記関連画像
        <span class="indispensable">任意</span>
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image, id:"diary-image" %>
      </div>
    </div>
    <%# /商品画像 %>
    <%# 商品名と商品説明 %>
    <div class="new-diaries">
      <div class="weight-bold-text">
        日記タイトル
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :title, class:"diaries-text", id:"diary-name", placeholder:"日記タイトル", maxlength:"40" %>
      <div class="diaries-explain">
       <div class="weight-bold-text">
          カテゴリー
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"diary-category"}) %>
        <div class="weight-bold-text">
          日記内容
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :text, class:"diaries-text", id:"diary-info", placeholder:"日記の詳細内容を入力してください。。"  ,maxlength:"3000" %>
      </div>
    </div>
    <%# /商品名と商品説明 %>

    <%# 下部ボタン %>
    <div class="write-btn-contents">
      <%= f.submit "投稿する" ,class:"write-btn" %>
      <%=link_to 'もどる', diary_path(@diary.id), class:"back-btn" %>
    </div>
    <%# /下部ボタン %>
  </div>
  <% end %>

  <footer class="diaries-footer">
   
    <%= link_to image_tag('kodomo-logo.png' , size: '185x50'), "/" %>
    <p class="inc">
      ©︎Furima,Inc.
    </p>
  </footer>
</div>